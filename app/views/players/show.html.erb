<% provide(:title, @player.name) %>
<div class="team-name">
  <h1>
    <%= link_to @player.team.name, team_path(@player.team), class: "text-white" %>
  </h1>
</div>
<div class="player-background text-white body-container">
  <div class="container">
    <div class="row">
      <div align="center" class="player-gravatar">
        <%= gravatar_for @player, size: 200 %>
      </div>
      
      <p class="player-number"><%= @player.number %></p>
      <h1><%= @player.name %></h1>
      <p class="player-position">ポジション/<%= @player.position %></p>
        
      <div class="player-profile player-table">
        <%= render 'profile' %>
      </div>
      
      <div class="player-average player-table">
        <%= render 'average' %>
      </div>
      
      <div class="player-stats player-table">
        <%= render 'stats' %>
      </div>
    </div>
  </div>
</div>