<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="team_info">
        <h1>
          <%#= gravatar_for current_team %>
          <%= current_team.name %>
        </h1>
      </section>
    </aside>
    <div class="col-md-8">
      <% if current_team.players.any? %>
        <h3>メンバー (<%= current_team.players.count %>)</h3>
        <ol class="players">
          <%= render @players %>
        </ol>
        <%= will_paginate @players %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Team App</h1>
  
    <h2>
      This is the home page for the Team App.
    </h2>
  
    <ul class="signup-ul">
      <li class="signup-list"><%= link_to "チーム登録", new_team_path, class: "btn btn-lg btn-primary" %></li>
      <li class="signup-list"><%= link_to "プレイヤー登録", team_login_path, class: "btn btn-lg btn-primary" %></li>
    </ul>
  </div>
<% end %>