<% provide(:placeholder, "Compose new micropost...") %>
<% provide(:value, "") %>
<% provide(:submit, "投稿") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="team_info">
        <h1>
          <%= gravatar_for current_team %>
          <%= current_team.name %>
        </h1>
      </section>
      <section class="player_info">
        <%= render 'shared/player_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>投稿</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Team App</h1>
  
    <h2>
      This is the home page for the Team App.
    </h2>
  
    <ul class="signup-ul">
      <li class="signup-list"><%= link_to "チーム登録", new_team_path, class: "btn btn-lg btn-primary" %></li>
      <li class="signup-list"><%= link_to "プレイヤー登録", team_login_path, class: "btn btn-lg btn-primary" %></li>
    </ul>
  </div>
<% end %>