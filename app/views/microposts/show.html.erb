<% provide(:title, @micropost.content) %>
<% provide(:placeholder, "") %>
<% provide(:value, "#{@micropost.content}") %>
<% provide(:submit, "編集") %>
<div class="row">
  <aside class="col-md-4">
    <%= link_to gravatar_for(@micropost.player, size: 50), @micropost.player %>
    <span class="player">
      <%= link_to @micropost.player.name, @micropost.player %>
    </span>
    </section>
    <span class="timestamp">
      Posted <%= time_ago_in_words(@micropost.created_at) %> ago.
    </span>
    <% if current_player?(@micropost.player) %>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
      <%= link_to "削除", @micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
       | 
      <%= link_to "編集", edit_micropost_path(@micropost) %>
    <% else %>
      <span class="content">
        <%= @micropost.content %>
        <%= image_tag @micropost.picture.url if @micropost.picture? %>
      </span>
    <% end %>
  </aside>
  <!-- localsで変数を代入 -->
  <%= render partial:'comments/widget', locals:{micropost: @micropost, comment: @comment} %>
</div>