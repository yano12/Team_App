<% provide(:title, @team.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="team_info">
      <h1>
        <%#= gravatar_for @team %>
        <%= @team.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @team.players.any? %>
      <h3>メンバー (<%= @team.players.count %>)</h3>
      <ol class="players">
        <%= render @players %>
      </ol>
      <%= will_paginate @players %>
    <% end %>
  </div>
</div>