<% if logged_in? %>
  <%= form_for [@micropost, @comment], remote: true do | f | %>
    <%= f.hidden_field :parent_id %>
    <%= f.text_area :content, size:'30x20', label: false,
                    id: 'comment-text', class: 'form-control',
                    placeholder: (f.object.parent_id.nil? ? 'コメントする' : 'コメントに返信する') %>
    <%= f.submit 'コメントを投稿', class: 'btn btn-primary float-xs-right comment-action' %>
  <% end %>
<% end %>