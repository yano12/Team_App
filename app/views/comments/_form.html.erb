<% if logged_in? %>
  <div class="panel panel-default">
    <div class="btn-header">
      <h3 class="title">コメントする</h3>
    </div>
    <div class="panel-body">
      <%= form_for [@micropost, @comment], remote: true do | f | %>
        <%= f.hidden_field :parent_id %>
        <%= f.text_area :content, 
              label: false,
              id: 'comment-text', class: 'form-control',
              placeholder: (f.object.parent_id.nil? ? 'コメント' : 'コメントに返信する') %>
        <%= f.submit 'コメントを投稿', class: 'btn btn-primary comment-action' %>
      <% end %>
    </div>
  </div>
<% end %>